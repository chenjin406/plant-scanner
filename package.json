{
  "name": "plant-scanner",
  "version": "0.0.1",
  "private": true,
  "description": "Plant Scanner & Garden Management App",
  "scripts": {
    "dev:h5": "cd apps/h5 && npm run dev:h5",
    "dev:weapp": "cd apps/miniapp && npm run dev:weapp",
    "dev:alipay": "cd apps/miniapp && npm run dev:alipay",
    "install:h5": "cd apps/h5 && npm install --legacy-peer-deps",
    "build:h5": "NODE_ENV=production npm run install:h5 && cd apps/h5 && npm run build:h5",
    "build:weapp": "cd apps/miniapp && npm run build:weapp",
    "build:alipay": "cd apps/miniapp && npm run build:alipay",
    "lint": "eslint \"apps/**/*.ts\" \"apps/**/*.tsx\" \"packages/**/*.ts\" \"packages/**/*.tsx\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "data-sync": "node scripts/data-sync/index.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
